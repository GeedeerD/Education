<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileFirst.MainPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Image Dropdown">

    <VerticalStackLayout Padding="20">
        <!-- Текущий выбор -->
        <Image x:Name="SelectedImage"
               HeightRequest="100"
               WidthRequest="100"
               Aspect="AspectFill"
               Source="image1.png">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnImageTapped" />
            </Image.GestureRecognizers>
        </Image>

        <!-- Popup -->
        <toolkit:Popup x:Name="ImagePopup">
            <toolkit:Popup.Content>
                <Frame BackgroundColor="White"
                       BorderColor="Gray"
                       Padding="10">
                    <CollectionView x:Name="ImageList"
                                    SelectionMode="Single"
                                    SelectionChanged="OnImageSelected">
                        <CollectionView.ItemsSource>
                            <x:Array Type="{x:Type ImageSource}">
                                <ImageSource>image1.png</ImageSource>
                                <ImageSource>image2.png</ImageSource>
                                <ImageSource>image3.png</ImageSource>
                            </x:Array>
                        </CollectionView.ItemsSource>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}"
                                       HeightRequest="80"
                                       WidthRequest="80"
                                       Margin="5" />
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Frame>
            </toolkit:Popup.Content>
        </toolkit:Popup>
    </VerticalStackLayout>
</ContentPage>